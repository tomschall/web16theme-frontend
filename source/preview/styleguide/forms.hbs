{{#extend "preview/layouts/layout"}}
	{{#content "content"}}
		<section class="sg_inner_wrapper">
			<h2 class="sg_h2">Form buttons</h2>
			<div class="sg_demo">
				<form>
					<fieldset>
						<p><input type="button" value="Input type button"></p>
						<p><input type="reset" value="Input type reset"></p>
						<p><input type="submit" value="Input type submit"></p>
						<p><input type="submit" value="Input type submit disabled" disabled></p>
						<p><button type="button">Button type button</button></p>
						<p><button type="reset">Button type reset</button></p>
						<p><button type="submit">Button type submit</button></p>
						<p><button type="button" disabled>Button type button disabled</button></p>
						<p><button>Button</button></p>
            <p><button class="button__secondary">Sekundär Button</button></p>
            <p><button class="button__secondary" disabled>Sekundär Button Disabled</button></p>
					</fieldset>
				</form>
			</div>
		</section>

		<section class="sg_inner_wrapper">
			<h2 class="sg_h2">Form fields default</h2>
			<div class="sg_demo">
				<form>
					<fieldset>
						<div class="ArchetypesStringWidget field">
							<input type="text" id="text"/>
							<label class="formQuestion" for="text">Text-Inputfeld</label>
							<div class="fieldErrorBox"></div>
						</div>
						<div class="field ArchetypesSelectionWidget">
							<select class="custom-select" data-placeholder="Select an option">
								<option></option>
								<option value="A">Answer A</option>
                <option value="B">Answer B</option>
                <option value="V">Answer V</option>
							</select>
						</div>
					</fieldset>
				</form>
			</div>
		</section>

    <section class="sg_inner_wrapper">
      <h2 class="sg_h2">Example form</h2>
      <div class="sg_demo">
        <form class="form" data-validate="true">
          <fieldset>
            <select class="custom-select custom-select___short" data-placeholder="Anrede" data-rule-selectRequired="true" data-msg-selectRequired="Pflichtfeld">
              <option></option>
              <option value="mr">Herr</option>
              <option value="mrs">Frau</option>
            </select>
					</fieldset>
          <fieldset>
            <div class="ArchetypesStringWidget">
              <input type="text" id="surname" name="surname" data-rule-required="true" data-msg-required="Pflichtfeld"/>
              <label class="formQuestion" for="surname">Name
								<span class="required" title="Erforderlich"> </span>
							</label>
							<div class="fieldErrorBox"></div>
            </div>
					</fieldset>
          <fieldset>
            <div class="ArchetypesStringWidget">
              <input type="text" id="prename" name="prename" data-rule-required="true" data-msg-required="Pflichtfeld"/>
              <label class="formQuestion" for="prename">Vorname</label>
              <div class="fieldErrorBox"></div>

						</div>
          </fieldset>
          <fieldset>
            <div class="ArchetypesStringWidget large">
              <input type="text" id="street" name="street" data-rule-required="true" data-msg-required="Pflichtfeld"/>
              <label class="formQuestion" for="street">Strasse</label>
              <div class="fieldErrorBox"></div>

						</div>
            <div class="ArchetypesStringWidget  xs">
              <input type="text" id="house_number" name="house_number" data-rule-required="true" data-msg-required="Pflichtfeld"/>
              <label class="formQuestion" for="house_number">Nr.</label>
              <div class="fieldErrorBox"></div>

						</div>
          </fieldset>
          <fieldset>
            <div class="ArchetypesStringWidget small">
              <input type="number" id="zip" name="zip" data-rule-required="true" data-msg-required="Pflichtfeld" data-rule-number="true" data-msg-number="Die PLZ muss eine Zahl sein"/>
              <label class="formQuestion" for="zip">PLZ</label>
              <div class="fieldErrorBox"></div>

						</div>
            <div class="ArchetypesStringWidget medium">
              <input type="text" id="city" name="city" data-rule-required="true" data-msg-required="Pflichtfeld"/>
              <label class="formQuestion" for="city">Ort</label>
              <div class="fieldErrorBox"></div>

						</div>
          </fieldset>
          <fieldset>
            <div class="ArchetypesStringWidget">
              <input type="email" id="email" name="email" data-rule-required="true" data-msg-required="Pflichtfeld" data-rule-email="true" data-msg-email="Ungültiges E-Mail Format"/>
              <label class="formQuestion" for="email">Email</label>
              <div class="fieldErrorBox"></div>

						</div>
          </fieldset>
          <fieldset>
						<div class="ArchetypesBooleanWidget field">
              <input type="radio" name="radio" id="rad1" data-rule-required="true" data-msg-required="error message radio button" value="accepted" />
              <label class="formQuestion" for="rad1">Radio input</label>
              <div class="fieldErrorBox"></div>
						</div>

					</fieldset>
          <fieldset>
            <div class="ArchetypesBooleanWidget field">
              <input type="checkbox" name="agree" id="check1" data-rule-required="true" data-msg-required="true" value="yes" />
              <label class="formQuestion" for="check1">Checkbox input</label>
              <div class="fieldErrorBox"></div>
            </div>
					</fieldset>
          <button type="submit">Online Anmelden</button>
        </form>
      </div>
    </section>
	{{/content}}
{{/extend}}
