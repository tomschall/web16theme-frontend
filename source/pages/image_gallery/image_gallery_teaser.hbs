{{#extend "layouts/layout"}}
	{{#content "hero"}}
		{{> "widgets/hero/hero" widgets.hero}}
	{{/content}}
	{{#content "content"}}
    <div class="page_content">
      <h1>{{title}}</h1>
      <p class="text__lead">
				{{leadText}}
      </p>
			<h2>Teaser Gallery</h2>
			<div class="content__element">
				<style media="screen">
				/* POC Image Gallery - webteam/fhnw.webauftritt#1232 */
				ul.slick-dots {
					text-align: center;
				}
				ul.slick-dots li:before {
					content: '' !important;
				}
				ul.slick-dots li {
					display: inline-block;
					margin: 0 !important;
					padding: 0 !important;
				}
				ul.slick-dots button {
					background: #f7f7f5;
					color: inherit;
				}
				ul.slick-dots .slick-active button {
					background: #deded9;
					color: inherit;
				}

				.slider-nav-thumbnails button.image_gallery__arrow {
					top: -360%;
					outline: none;
				}

				.slick-slider ul.slick-dots button {
					height: 70px;
					width: 70px;
					line-height: 70px;
					margin: 0;
					padding: 0 25px 0px 25px;
				}

				.slick-slide {
					outline: none;
				}

				.slick-slide img {
					outline: none;
					cursor: grab;
				}


				// POC Image Gallery Variations
				.slick-slide {
					float: left;
					height: 100%;
					min-height: 1px;
					display: none;
					outline: 0;
				}
				.slick-slide img {
					cursor: -webkit-grab;
					cursor: grab;
					outline: 0;
				}
				.slider-nav-thumbnails button.image_gallery__arrow {
					top: -300%;
					outline: 0;
				}
				.slider-nav-thumbnails .slick-slide img {
					border-bottom: 3px solid #fff;
					display: block;
					float: left;
					margin: 5px;
					opacity: .7;
				}
				.slider-nav-thumbnails .slick-slide.slick-current.slick-center img {
					border-bottom: 2px solid #000;
					padding-bottom: 5px;
					opacity: 1;
				}
				.slider-nav-thumbnails .slick-slide {
						margin: 5px;
				}

				// Teaser Slider
				.widg_image_gallery.slider.teaser.slick-initialized.slick-slider .slick-slide {
						margin: 10px;
				}
				.widg_image_gallery.slider.teaser .image_gallery__arrow {
					top: 25%;
				}
				</style>
				<div class="widg_image_gallery slider teaser" data-init="gallery_teaser">
					<div class="widg_teaser wide___third">
						<div class="widg_teaser__img" style="position: relative; overflow: hidden;">
							<img src="/assets/media/img/apevent1.png" alt="" style="position: absolute; top: -0.911765px; left: 0px; width: 290px; height: 181px; max-width: none;">
						</div>
							<h3 class="widg_teaser__title childless">Bachelor of Arts in Musik</h3>
							<p>Bei international renommierten Dozierenden eine künstlerische Karriere vorbereiten</p>
					</div>
					<div class="widg_teaser wide___third">
						<div class="widg_teaser__img" style="position: relative; overflow: hidden;">
							<img src="/assets/media/img/apevent2.png" alt="" style="position: absolute; top: -0.911765px; left: 0px; width: 290px; height: 181px; max-width: none;">
						</div>
							<h3 class="widg_teaser__title childless">Bachelor of Arts in Musik und Bewegung</h3>
							<p>Bei international renommierten Dozierenden eine künstlerische Karriere vorbereiten</p>
					</div>
					<div class="widg_teaser wide___third">
						<div class="widg_teaser__img" style="position: relative; overflow: hidden;">
							<img src="/assets/media/img/apevent3.png" alt="" style="position: absolute; top: -0.911765px; left: 0px; width: 290px; height: 181px; max-width: none;">
						</div>
							<h3 class="widg_teaser__title childless">Master of Arts in Musikpädagogik</h3>
							<p>Bei international renommierten Dozierenden eine künstlerische Karriere vorbereiten</p>
					</div>
					<div class="widg_teaser wide___third">
						<div class="widg_teaser__img" style="position: relative; overflow: hidden;">
							<img src="/assets/media/img/bund_logo.png" alt="" style="position: absolute; top: -0.911765px; left: 0px; width: 290px; height: 181px; max-width: none;">
						</div>
							<h3 class="widg_teaser__title childless">Master of Arts in Komposition / Musiktheorie</h3>
							<p>Bei international renommierten Dozierenden eine künstlerische Karriere vorbereiten</p>
					</div>
					<div class="widg_teaser wide___third">
						<div class="widg_teaser__img" style="position: relative; overflow: hidden;">
							<img src="/assets/media/img/campus_brugg.jpg" alt="" style="position: absolute; top: -0.911765px; left: 0px; width: 290px; height: 181px; max-width: none;">
						</div>
							<h3 class="widg_teaser__title childless">Master of Arts in Musikalischer Performance - Instrumental oder vokal</h3>
							<p>Bei international renommierten Dozierenden eine künstlerische Karriere vorbereiten</p>
					</div>
				</div>
			</div>
			<script type="text/javascript">
				'use strict';

				window.onload = function() {
					if (window.jQuery) {
						$('.slider').slick({
						 slidesToShow: 3,
						 slidesToScroll: 1,
						 autoplay: true,
						 dots: false,
						 adaptiveHeight: true,
						 arrows: true,
						 cssEase: 'ease-in',
						 nextArrow: '<button type="button" class="not-default image_gallery__arrow image_gallery__next">Next</button>',
						 prevArrow: '<button type="button" class="not-default image_gallery__arrow image_gallery__prev">Previous</button>'
						});
				}
			}
			</script>
			<p class="text__lead">
				{{leadText}}
			</p>
    </div>
		{{> "widgets/subnav/subnav" widgets.subnav heroImage=widgets.hero.heroImage}}
	{{/content}}
{{/extend}}
