{{#extend "layouts/layout" pageTypeClass="search-page"}}
	{{#content "hero"}}
		{{> "widgets/hero/hero" widgets.hero}}
	{{/content}}
	{{#content "content"}}
    <h1 id="search-title" data-searchpage="title">{{title}}</h1>

    <div class="search__wrapper" data-searchpage-template="training_full" data-searchpage-category="training" data-searchpage="formWrapper">
      <div class="search__form-wrapper">
				<div>
          <div class="search__holder select2__wrapper">
            <select id="faculty" name="faculty" data-searchparam="faculty" class="custom-select" multiple="multiple">
              {{#each widgets.facultyOptions}}
								<option value="{{optionValue}}">{{optionLabel}}</option>
							{{/each}}
            </select>
            <label class="formQuestion" for="faculty">{{langStrings.labels.faculty}}</label>
          </div>
          <div class="search__holder select2__wrapper">
            <select id="study_type" name="study_type" data-searchparam="study_type" class="custom-select" multiple="multiple">
              {{#each widgets.studyTypeOptions}}
								<option value="{{optionValue}}">{{optionLabel}}</option>
							{{/each}}
            </select>
            <label class="formQuestion" for="study_type">{{langStrings.labels.study_type}}</label>
          </div>
          <div class="search__holder select2__wrapper">
            <select id="location" name="location" data-searchparam="location" class="custom-select" multiple="multiple">
							{{#each widgets.locationOptions}}
								<option value="{{optionValue}}">{{optionLabel}}</option>
							{{/each}}
            </select>
            <label class="formQuestion" for="location">{{langStrings.labels.location}}</label>
          </div>
          <div class="search__holder">
            <div class="search__string">
              <input type="text" value="" id="search-string" name="search-string" data-searchpage="query" data-searchparam="q"/>
              <label class="formQuestion" for="search-string">{{langStrings.labels.term}}</label>
            </div>
          </div>
				</div>

				<div class="search__second-row" data-searchpage="expandedFilters">
					<div class="search__holder select2__wrapper">
            <select class="custom-select custom-select___long has_optgroup" name="topic" id="topic" data-searchparam="topic" data-placeholder="">
							{{#each widgets.competenceOptions}}
								<option value="{{optionValue}}">{{optionLabel}}</option>
							{{/each}}
            </select>
            <label class="formQuestion" for="topic">{{langStrings.labels.topic}}</label>
						<span class="custom-select___remover" aria-hidden="true"></span>
					</div>
          <div class="search__holder select2__wrapper">
            <select class="custom-select" name="target_group" id="target_group" data-searchparam="target_group" data-placeholder="">
							{{#each widgets.targetGroupOptions}}
								<option value="{{optionValue}}">{{optionLabel}}</option>
							{{/each}}
            </select>
            <label class="formQuestion" for="target_group">{{langStrings.labels.target_group}}</label>
          </div>
				</div>

				<div class="search__third-row">
					<div class="search__extra-holder">
						<button class="search__expander not-default" data-searchpage="extendBtn">{{langStrings.extSearch}}</button>
						<button class="search__reset not-default" data-searchpage="reset">{{langStrings.resetFields}}</button>
					</div>
					<div class="search__extra-holder element-hidden">
						<span data-searchpage="countNumber"></span> {{langStrings.resultsFound}}
					</div>
				</div>

      </div>
			{{> "widgets/searchpage/searchpage" widgets.searchpage }}
    </div>

	{{/content}}
{{/extend}}
