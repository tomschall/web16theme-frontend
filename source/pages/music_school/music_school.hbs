{{#extend "layouts/layout" pageTypeClass="default-page"}}
	{{#content "hero"}}
		{{> "widgets/hero/hero" widgets.hero}}
	{{/content}}
	{{#content "content"}}
    <div class="page_content" id="pageContentTop">
      <h1>{{title}}</h1>
      <p class="text__lead">
				{{leadText}}
      </p>
      <div class="content__element has_grid">
        <h2>Veranstaltungen</h2>
				{{> "widgets/teaser/teaser" widgets.eventTeasers}}
      </div>
			<div class="content__element">
				<h2>Aktuelle News</h2>
				{{> "widgets/extendedlinks/extendedlinks" widgets.extendedlinks}}
			</div>

      <div class="content__element content__element___bleed content__element___borderless">
				{{> "widgets/blockquote/blockquote" widgets.quote}}
      </div>

    </div>
		{{> "widgets/subnav/subnav" widgets.subnav heroImage=widgets.hero.heroImage}}

    <div class="page_content">
      <div class="content__element content__element___top-bordered" id="pageContentBottom">
        <h2>Querlinks</h2>
				{{> "widgets/extendedlinks/extendedlinks" widgets.querlinks}}
      </div>

			<div class="content__element content__element___bleed content__element___borderless">
				{{> "widgets/newsletter_subscription/newsletter_subscription" widgets.newsletterSubscription}}
			</div>
    </div>

    <div class="content__element content__element___bleed content__element___top-bordered" id="locations">

			{{> "widgets/location_slider/location_slider" widgets.locationSlider}}
      <div class="only-phone">
				{{> "widgets/accordeon/accordeon" widgets.locationAccordeon }}
      </div>
    </div>
	{{/content}}
{{/extend}}
