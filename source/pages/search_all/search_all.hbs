{{#extend "layouts/layout" pageTypeClass="search-page"}}
	{{#content "content"}}
		<h1 id="search-title" data-searchpage="title">{{title}}</h1>

		<div class="search__wrapper" data-searchpage="formWrapper" data-searchpage-template="search_full">
			<div class="search__form-wrapper search__form-all">
				<div class="search__string-holder">
					<div class="search__string">
						<input type="text" value="" id="search-string" name="search-string" data-searchpage="query" data-searchparam="q"/>
						<label for="search-string">{{widgets.label_search}}</label>
					</div>
				</div>
				<div class="search__button">
					<button class="button search__button" data-searchpage="btn">{{widgets.label_btn_search}}</button>
				</div>
			</div>
			{{> "widgets/searchpage/searchpage" widgets.searchpage }}
		</div>

	{{/content}}
{{/extend}}
