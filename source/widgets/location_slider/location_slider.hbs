<div class="widg_location_slider" data-init="location_slider">
  <nav>
    <ul data-location_slider="nav-list">
			{{#each entries}}
        <li>
          <button data-location_slider="nav-option">{{navTitle}}</button>
        </li>
			{{/each}}
      <div class="widg_location__nav-bar" data-location_slider="bar"></div>
		</ul>
  </nav>

  <div class="slider" data-location_slider="slider">
		{{#each entries}}
      <div class="location__slide">
        <div class="location__map" data-coordinates-x="{{coordinates.x}}" data-coordinates-y="{{coordinates.y}}"
             data-location_slider="map"></div>
        <div class="location__info">
          <div class="location__upper">
            <h3>{{title}}</h3>
            <div class="location__address">
              <span>{{address.name}}</span>
              <span>{{address.department}}</span>
              <span>{{address.street}}</span>
              <span>{{address.zipCity}}</span>
            </div>
            <div class="location__contact">
              <dl>
                <dt>Telefon:</dt>
                <dd><a href="tel:{{contactData.telephone}}">{{contactData.telephone}}</a></dd>
                <dt>E-Mail:</dt>
                <dd><a href="mailto:{{contactData.email}}">{{contactData.email}}</a></dd>
              </dl>
            </div>
						<a class="button small_button" href="{{locationPageURL}}">Mehr Infos zum Standort</a>
          </div>
					<div class="location__inferior">
						<a href="{{routeURL}}" target="_blank"><span>Route berechnen</span></a>
					</div>
        </div>
      </div>
		{{/each}}
  </div>
</div>
