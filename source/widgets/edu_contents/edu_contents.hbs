<div class="widg_edu_contents" data-init="edu_key_data">
	<div class="edu__content" data-sidebar="content">
		<div class="object__title" data-sidebar="title">
			<h2 class="edu__title">{{title}}</h2>
		</div>
		<dl class="edu__key_data">
		{{#each entries}}
		<div class="datas">
			<dt>{{{title}}}</dt>
			<dd>{{{text}}}</dd>
		</div>
		{{/each}}
		</dl>
		<div class="toggler">
			<a class="show-more button small_button">Mehr anzeigen</a>
		</div>
		</div>
		<div class="edu__details">
			{{#if widgets.events}}
				{{> "widgets/edu_events/edu_events" widgets.events }}
			{{/if}}
			{{#if widgets.application}}
				{{> "widgets/edu_application/edu_application" widgets.application}}
			{{/if}}
		</div>
</div>
