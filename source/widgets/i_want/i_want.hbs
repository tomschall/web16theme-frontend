<div class="widg_i_want" data-init="i_want" style="background-image: url('{{ img.src }}')">
  <h2 class="childless">{{title}}</h2>
  <div class="control_group field">
    <div class="select2__wrapper">
      <select class="custom-select custom-select___long has_optgroup" name="topic" id="topic" data-searchparam="topic" data-placeholder="">
        <option value=""></option>
        {{#each options}}
          <option value="{{url}}">{{text}}</option>
        {{/each}}
      </select>
      <label class="formQuestion" for="topic">{{defaultText}}</label>
      <span class="custom-select___remover" aria-hidden="true"></span>
    </div>
    <button type="submit" class="in_content_search__button" disabled>Weiter</button>
  </div>
</div>
