<div class="widg_application_accordeon" data-init="application_accordeon" {{#if multiple}}data-multiple="true"{{/if}} role="list">
  <h2>{{title}}</h2>
  <p>{{{description}}}</p>
  <!-- Custom html structure if its the accordeon for an online application -->
	{{#each entries}}
      <div id="{{title}}" class="widg_accordeon__entry mce-item-anchor" data-application-accordeon="entry" role="listitem">
				<div class="widg_accordeon_item" aria-expanded="false" data-application-accordeon="button">
					<span class="availability {{availabilityState}}"></span>
					<span class="event_location">{{eventLocation}}</span>
					<span class="widg_accordoen_location">
						<span class="accessibility-hidden" id="date-{{uid}}">{{../langStrings.eventStart}}: </span>
						<span aria-describedby="date-{{uid}}">{{eventStart}}</span>
					</span>
					<span class="widg_accordeon_btn">
						<a onclick="window.location.href='{{btnUrl}}'" class="{{#if applicationIsActive}}{{else}}disabled{{/if}}">{{applyLabel}}</a>
					</span>
					<span class="widg_accordeon__more"></span>
				</div>
        <div class="widg_accordeon__content" aria-hidden="true" data-application-accordeon="content">
          <dl>
						{{#each informationEntries}}
							{{#if text}}
								<div class="application-accordeon__entry">
									<dt>{{label}}</dt>
									<dd>{{{text}}}
										{{#if iCalURL}}
											<a class="ical" href="{{iCalURL}}">iCal</a>
										{{/if}}
									</dd>
								</div>
							{{/if}}
						{{/each}}
          </dl>
		  <a onclick="window.location.href='{{btnUrl}}'" class="button button__apply button__apply___inside small_button {{#if applicationIsActive}}{{else}}disabled{{/if}}">{{applyLabel}}</a>
		  <p class="additional-information">{{additionalInformation}}</p>
        </div>
      </div>
  	{{/each}}
</div>
