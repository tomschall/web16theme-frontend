{{#each widgets}}
<plone:tile
        name="fhnw.web16.tiles.{{nameLower}}"
        title="{{name}} Widget"
        description="{{description}}"
        add_permission="cmf.ModifyPortalContent"
        class=".browser.tile.{{name}}Tile"
        for="*"
        permission="zope.Public"
        template="widgets/{{nameLower}}/{{template}}.hbs"
        schema=".browser.tile.I{{name}}Tile"
        />

{{/each}}
