{{#each modules}}
<plone:tile
        name="fhnw.web16.tiles.{{lcmodulname}}"
        title="{{modulname}} Widget"
        description="{{moduldesc}}"
        add_permission="cmf.ModifyPortalContent"
        class=".browser.tile.{{modulname}}Tile"
        for="*"
        permission="zope.Public"
        template="widgets/{{lcmodulname}}/{{moduletemplate}}.hbs"
        schema=".browser.tile.I{{modulname}}Tile"
        />

{{/each}}
